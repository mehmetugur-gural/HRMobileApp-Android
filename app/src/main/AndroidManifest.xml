<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asworks.hrmobileapp_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".EventDetailActivity" />
        <activity android:name=".LostPasswordActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".SettingsProfileActivity" />
        <activity android:name=".SettingsSizeActivity" />
        <activity android:name=".SettingsAvailabilityActivity" />
        <activity android:name=".SettingsJobActivity" />
        <activity android:name=".SettingsEducationActivity" />
        <activity android:name=".SettingsCertificateActivity" />
        <activity android:name=".SettingsCVActivity" />
        <activity android:name=".SettingsPicturesActivity" />

    </application>

</manifest>